<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="HoYoShadeHub.Features.ViewHost.ThirdPartyIntegrationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="using:HoYoShadeHub.Language"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DefaultButton="Close"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <Style TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="FontFamily" Value="Consolas,Cascadia Mono,Courier New" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </ContentDialog.Resources>

    <ScrollViewer MaxHeight="600">
        <StackPanel Spacing="12">
            <!--  提示信息  -->
            <TextBlock
                Foreground="{ThemeResource SystemFillColorAttentionBrush}"
                IsTextSelectionEnabled="True"
                Text="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_Intro}"
                TextWrapping="Wrap" />

            <!--  未安装任何框架的提示  -->
            <InfoBar
                x:Name="InfoBar_NoFrameworkInstalled"
                IsOpen="False"
                Message="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_NoFrameworkWarning}"
                Severity="Warning" />

            <!--  HoYoShade ����  -->
            <StackPanel x:Name="StackPanel_HoYoShade" Spacing="8">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="HoYoShade" />

                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="TextBox_HoYoShadeCommand"
                        Grid.Column="0"
                        IsReadOnly="True"
                        Text="" />

                    <Button
                        Grid.Column="1"
                        Click="Button_CopyHoYoShadeCommand_Click"
                        Content="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_Copy}" />
                </Grid>

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_HoYoShadeDesc}"
                    TextWrapping="Wrap" />
            </StackPanel>

            <!--  OpenHoYoShade ����  -->
            <StackPanel x:Name="StackPanel_OpenHoYoShade" Spacing="8">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="OpenHoYoShade" />

                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="TextBox_OpenHoYoShadeCommand"
                        Grid.Column="0"
                        IsReadOnly="True"
                        Text="" />

                    <Button
                        Grid.Column="1"
                        Click="Button_CopyOpenHoYoShadeCommand_Click"
                        Content="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_Copy}" />
                </Grid>

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind lang:Lang.ThirdPartyIntegrationDialog_OpenHoYoShadeDesc}"
                    TextWrapping="Wrap" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</ContentDialog>
