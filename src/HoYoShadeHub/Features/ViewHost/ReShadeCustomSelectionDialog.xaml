<ContentDialog
    x:Class="HoYoShadeHub.Features.ViewHost.ReShadeCustomSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lang="using:HoYoShadeHub.Language"
    xmlns:models="using:HoYoShadeHub.RPC.HoYoShadeInstall"
    mc:Ignorable="d"
    PrimaryButtonText="{x:Bind lang:Lang.Common_Confirm}"
    SecondaryButtonText="{x:Bind lang:Lang.Common_Cancel}"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    Loaded="ContentDialog_Loaded"
    FullSizeDesired="False">

    <ContentDialog.Resources>
        <!-- Override the default maximum width limit of ContentDialog. -->
        <x:Double x:Key="ContentDialogMaxWidth">1280</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">720</x:Double>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </ContentDialog.Resources>

    <Grid x:Name="ContentGrid" Width="{x:Bind DialogWidth, Mode=OneWay}" Height="{x:Bind DialogHeight, Mode=OneWay}">
        <Pivot>
            <PivotItem Header="{x:Bind lang:Lang.ReShadeDownloadView_TypeShaders}">
                <ListView ItemsSource="{x:Bind EffectPackages}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:EffectPackage">
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{x:Bind Selected, Mode=TwoWay}" 
                                          IsEnabled="{x:Bind Modifiable}" 
                                          VerticalAlignment="Top"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" Spacing="2">
                                    <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind Description}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="{x:Bind lang:Lang.ReShadeDownloadView_TypeAddons}">
                <ListView ItemsSource="{x:Bind Addons}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Addon">
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{x:Bind Selected, Mode=TwoWay}" 
                                          IsEnabled="{x:Bind Enabled}"
                                          VerticalAlignment="Top"
                                          Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" Spacing="2">
                                    <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" />
                                    <TextBlock Text="{x:Bind Description}" 
                                               FontSize="12" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>
        
        <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}" 
                      Width="48" Height="48" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Visibility="{x:Bind IsLoading, Mode=OneWay}"/>
    </Grid>
</ContentDialog>
