<?xml version="1.0" encoding="utf-8" ?>
<sf:PageBase x:Class="HoYoShadeHub.Features.Setting.IntegrationSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:HoYoShadeHub.Language"
             xmlns:local="using:HoYoShadeHub.Features.Setting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="using:HoYoShadeHub.Frameworks"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="0,0,24,0" Spacing="20">

            <!--  Blender/留影机插件  -->
            <TextBlock FontSize="20"
                       FontWeight="Bold"
                       Text="{x:Bind lang:Lang.SettingPage_BlenderPlugin}" />

            <!--  原神Blender/留影机插件  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="16"
                           FontWeight="SemiBold"
                           Text="{x:Bind lang:Lang.SettingPage_GenshinBlenderPlugin}" />

                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{x:Bind lang:Lang.SettingPage_PluginFolderPath}" />

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="{x:Bind GenshinBlenderPluginPathDisplay, Mode=OneWay}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind GenshinBlenderPluginPath, Mode=OneWay}" />

                    <Button Grid.Column="2"
                            MinWidth="120"
                            Command="{x:Bind SelectGenshinBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_SelectFolder}" />

                    <Button Grid.Column="3"
                            MinWidth="100"
                            Command="{x:Bind UnbindGenshinBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_Unbind}"
                            IsEnabled="{x:Bind GenshinBlenderPluginPath, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}" />
                </Grid>
            </StackPanel>

            <!--  绝区零Blender/留影机插件  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="16"
                           FontWeight="SemiBold"
                           Text="{x:Bind lang:Lang.SettingPage_ZZZBlenderPlugin}" />

                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{x:Bind lang:Lang.SettingPage_PluginFolderPath}" />

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="{x:Bind ZZZBlenderPluginPathDisplay, Mode=OneWay}"
                               TextTrimming="CharacterEllipsis"
                               ToolTipService.ToolTip="{x:Bind ZZZBlenderPluginPath, Mode=OneWay}" />

                    <Button Grid.Column="2"
                            MinWidth="120"
                            Command="{x:Bind SelectZZZBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_SelectFolder}" />

                    <Button Grid.Column="3"
                            MinWidth="100"
                            Command="{x:Bind UnbindZZZBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_Unbind}"
                            IsEnabled="{x:Bind ZZZBlenderPluginPath, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}" />
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</sf:PageBase>
