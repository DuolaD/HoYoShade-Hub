<?xml version="1.0" encoding="utf-8" ?>
<sf:PageBase x:Class="HoYoShadeHub.Features.Setting.IntegrationSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:HoYoShadeHub.Language"
             xmlns:local="using:HoYoShadeHub.Features.Setting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="using:HoYoShadeHub.Frameworks"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="0,0,24,0" Spacing="20">

            <!--  Blender/留影机插件  -->
            <TextBlock FontSize="20"
                       FontWeight="Bold"
                       Text="{x:Bind lang:Lang.SettingPage_BlenderPlugin}" />

            <!--  原神Blender/留影机插件  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="16"
                           FontWeight="SemiBold"
                           Text="{x:Bind lang:Lang.SettingPage_GenshinBlenderPlugin}" />

                <!--  路径显示（仅在已设置时显示）  -->
                <StackPanel Spacing="8" Visibility="{x:Bind GenshinBlenderPluginPath, Converter={StaticResource ObjectToVisibilityConverter}, Mode=OneWay}">
                    <TextBlock Text="{x:Bind lang:Lang.SettingPage_PluginFolderPath}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <Button Height="40"
                            Padding="20,0,20,1"
                            BorderThickness="0"
                            Command="{x:Bind OpenGenshinBlenderPluginFolderCommand}"
                            CornerRadius="20">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       IsTextTrimmedChanged="TextBlock_IsTextTrimmedChanged"
                                       MaxLines="2"
                                       Text="{x:Bind GenshinBlenderPluginPath, Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="Wrap" />
                            <FontIcon Grid.Column="1"
                                      Margin="0,2,2,0"
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE8A7;" />
                        </Grid>
                    </Button>
                </StackPanel>

                <!--  操作按钮  -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button MinWidth="120"
                            Command="{x:Bind SelectGenshinBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_SelectFolder}" />

                    <Button MinWidth="100"
                            Command="{x:Bind UnbindGenshinBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_Unbind}"
                            IsEnabled="{x:Bind GenshinBlenderPluginPath, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

            <!--  绝区零Blender/留影机插件  -->
            <StackPanel Spacing="12">
                <TextBlock FontSize="16"
                           FontWeight="SemiBold"
                           Text="{x:Bind lang:Lang.SettingPage_ZZZBlenderPlugin}" />

                <!--  路径显示（仅在已设置时显示）  -->
                <StackPanel Spacing="8" Visibility="{x:Bind ZZZBlenderPluginPath, Converter={StaticResource ObjectToVisibilityConverter}, Mode=OneWay}">
                    <TextBlock Text="{x:Bind lang:Lang.SettingPage_PluginFolderPath}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <Button Height="40"
                            Padding="20,0,20,1"
                            BorderThickness="0"
                            Command="{x:Bind OpenZZZBlenderPluginFolderCommand}"
                            CornerRadius="20">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       IsTextTrimmedChanged="TextBlock_IsTextTrimmedChanged"
                                       MaxLines="2"
                                       Text="{x:Bind ZZZBlenderPluginPath, Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="Wrap" />
                            <FontIcon Grid.Column="1"
                                      Margin="0,2,2,0"
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE8A7;" />
                        </Grid>
                    </Button>
                </StackPanel>

                <!--  操作按钮  -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button MinWidth="120"
                            Command="{x:Bind SelectZZZBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_SelectFolder}" />

                    <Button MinWidth="100"
                            Command="{x:Bind UnbindZZZBlenderPluginFolderCommand}"
                            Content="{x:Bind lang:Lang.SettingPage_Unbind}"
                            IsEnabled="{x:Bind ZZZBlenderPluginPath, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

            <!--  Starward启动器  -->
            <TextBlock FontSize="20"
                       FontWeight="Bold"
                       Margin="0,20,0,0"
                       Text="Starward启动器" />

            <StackPanel Spacing="12">

                <!--  协议状态显示  -->
                <StackPanel Spacing="8">

                    <TextBlock>
                        <Run Text="Starward启动器联动：" 
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <Run Text="{x:Bind ProtocolStatusText, Mode=OneWay}" 
                             Foreground="{x:Bind ProtocolStatusColor, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>

                <!--  使用Starward启动器开关  -->
                <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                    <ToggleSwitch Margin="0,8,0,0"
                                      IsOn="{x:Bind UseStarwardLauncher, Mode=TwoWay}"
                                      IsEnabled="{x:Bind IsStarwardProtocolAvailable, Mode=OneWay}" />

                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Top"
                                Spacing="2"
                                Margin="0,8,0,0">
                        <TextBlock Text="使用Starward启动器启动公开客户端游戏"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="启用后，启动公开客户端游戏时将使用Starward启动器进行启动。你需要确保对应的客户端已在Starward中定位/安装。"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"
                               FontSize="12" />
                </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</sf:PageBase>
