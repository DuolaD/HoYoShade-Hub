<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog x:Class="HoYoShadeHub.Features.Setting.ResetReShadeIniDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:lang="using:HoYoShadeHub.Language"
               xmlns:local="using:HoYoShadeHub.Features.Setting"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               x:DefaultBindMode="OneWay"
               Title="{x:Bind lang:Lang.ResetReShadeIniDialog_Title}"
               DefaultButton="None"
               mc:Ignorable="d">

    <Grid MinWidth="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  警告内容  -->
        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock FontSize="16"
                       FontWeight="SemiBold"
                       Text="{x:Bind lang:Lang.ResetReShadeIniDialog_WarningTitle}"
                       TextWrapping="Wrap" />
            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind lang:Lang.ResetReShadeIniDialog_WarningMessage1}"
                       TextWrapping="Wrap" />
            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind lang:Lang.ResetReShadeIniDialog_WarningMessage2}"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!--  进度显示  -->
        <StackPanel Grid.Row="1"
                    Margin="0,16,0,0"
                    Spacing="8"
                    Visibility="{x:Bind IsResetting, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" />
            <TextBlock HorizontalAlignment="Left"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind StatusMessage}" />
        </StackPanel>

        <!--  按钮栏  -->
        <StackPanel Grid.Row="2"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="12">
            <!--  取消/完成按钮  -->
            <Button MinWidth="120"
                    Command="{x:Bind CancelCommand}"
                    Content="{x:Bind CancelButtonText}"
                    IsEnabled="{x:Bind CanCancel}" />

            <!--  重置按钮  -->
            <Button MinWidth="120"
                    Command="{x:Bind ResetCommand}"
                    Content="{x:Bind lang:Lang.ResetReShadeIniDialog_Reset}"
                    IsEnabled="{x:Bind CanReset}"
                    Visibility="{x:Bind ShowResetButton, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.Style>
                    <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
                        <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
                        <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</ContentDialog>
