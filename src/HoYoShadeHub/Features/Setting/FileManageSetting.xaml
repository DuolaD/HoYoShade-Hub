<?xml version="1.0" encoding="utf-8" ?>
<sf:PageBase x:Class="HoYoShadeHub.Features.Setting.FileManageSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:HoYoShadeHub.Language"
             xmlns:local="using:HoYoShadeHub.Features.Setting"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="using:HoYoShadeHub"
             xmlns:sf="using:HoYoShadeHub.Frameworks"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel>


            <!--  用户数据文件夹  -->
            <TextBlock FontSize="20" Text="{x:Bind lang:Lang.FileSettingPage_DataFolder}" />
            <TextBlock Margin="0,12,0,0"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind lang:Lang.FileSettingPage_DataFolderIsImportant}"
                       TextWrapping="Wrap" />
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  重新选择  -->
                <Button Grid.Column="0"
                        Height="40"
                        Padding="16,0,16,0"
                        BorderThickness="0"
                        Command="{x:Bind ChangeUserDataFolderCommand}"
                        CornerRadius="8,20,20,8"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8DE;" />
                        <TextBlock Text="{x:Bind lang:Lang.SettingPage_ReselectDataFolder}" />
                    </StackPanel>
                </Button>
                <!--  当前用户数据文件夹  -->
                <Button Grid.Column="1"
                        Height="40"
                        Margin="16,0,0,0"
                        Padding="20,0,20,1"
                        BorderThickness="0"
                        Command="{x:Bind OpenUserDataFolderCommand}"
                        CornerRadius="20">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   IsTextTrimmedChanged="TextBlock_IsTextTrimmedChanged"
                                   MaxLines="2"
                                   Text="{x:Bind s:AppConfig.UserDataFolder}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap" />
                        <FontIcon Grid.Column="1"
                                  Margin="0,2,2,0"
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Glyph="&#xE8A7;" />
                    </Grid>
                </Button>
            </Grid>


            <!--  备份数据库  -->
            <StackPanel Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="16">
                <Button Height="40"
                        Margin="0,0,0,0"
                        Padding="16,0,16,0"
                        BorderThickness="0"
                        Command="{x:Bind BackupDatabaseCommand}"
                        CornerRadius="8,20,20,8"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xF413;" />
                        <TextBlock Text="{x:Bind lang:Lang.SettingPage_BackupDatabase}" />
                    </StackPanel>
                </Button>
                <ProgressRing Width="28"
                              Height="28"
                              IsIndeterminate="{x:Bind BackupDatabaseCommand.IsRunning}"
                              Visibility="{x:Bind BackupDatabaseCommand.IsRunning}" />
                <Button Height="40"
                        Padding="20,0,20,1"
                        BorderThickness="0"
                        Command="{x:Bind OpenLastBackupDatabaseCommand}"
                        CornerRadius="20"
                        Visibility="{x:Bind LastDatabaseBackupTime, Converter={StaticResource ObjectToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind LastDatabaseBackupTime}" />
                        <FontIcon Margin="8,2,2,0"
                                  FontSize="16"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Glyph="&#xE8A7;" />
                    </StackPanel>
                </Button>
            </StackPanel>


            <!--  删除所有设置  -->
            <Button Height="40"
                    Margin="0,8,0,0"
                    Padding="16,0,16,0"
                    BorderThickness="0"
                    Command="{x:Bind DeleteAllSettingCommand}"
                    CornerRadius="8,20,20,8"
                    Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;" />
                    <TextBlock Text="{x:Bind lang:Lang.SettingPage_DeleteAllSettings}" />
                </StackPanel>
            </Button>

            <!--  HoYoShade框架  -->
            <TextBlock Margin="0,20,0,0"
                       FontSize="20"
                       Text="{x:Bind lang:Lang.FileSettingPage_HoYoShadeFramework}" />

            <!--  安装按钮  -->
            <StackPanel Margin="0,12,0,0"
                        Orientation="Horizontal"
                        Spacing="16">
                <Button Height="40"
                        Padding="16,0,16,0"
                        BorderThickness="0"
                        Command="{x:Bind InstallHoYoShadeFrameworkCommand}"
                        CornerRadius="8,20,20,8"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" />
                        <TextBlock Text="{x:Bind lang:Lang.FileSettingPage_InstallHoYoShadeFramework}" />
                    </StackPanel>
                </Button>
                
                <Button Height="40"
                        Padding="16,0,16,0"
                        BorderThickness="0"
                        Command="{x:Bind InstallReShadeShadersCommand}"
                        CornerRadius="8,20,20,8"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" />
                        <TextBlock Text="{x:Bind lang:Lang.FileSettingPage_InstallReShadeShadersAndAddons}" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--  HoYoShade  -->
            <TextBlock Margin="0,12,0,0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Text="HoYoShade" />
            <StackPanel Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="20">
                <TextBlock>
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_InstallStatus}" />
                </TextBlock>
                <TextBlock>
                    <Run Foreground="{x:Bind HoYoShadeInstalled, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"
                         Text="{x:Bind HoYoShadeInstalled, Converter={StaticResource BoolToCheckMarkConverter}, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            
            <!--  HoYoShade详细信息（仅在已安装时显示）  -->
            <Grid Margin="0,4,0,0"
                  Visibility="{x:Bind HoYoShadeInstalled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="20">
                    <TextBlock>
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_TotalSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_ShaderAndAddonSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_PresetSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_ScreenshotSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_OtherContentSize}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="{x:Bind HoYoShadeTotalSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind HoYoShadeShaderSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind HoYoShadePresetSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind HoYoShadeScreenshotSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind HoYoShadeOtherSize, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
                
                <!--  HoYoShade路径和卸载按钮  -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <!--  HoYoShade路径按钮  -->
                    <Button Height="40"
                            Padding="20,0,20,1"
                            BorderThickness="0"
                            Command="{x:Bind OpenHoYoShadeFolderCommand}"
                            CornerRadius="20">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       IsTextTrimmedChanged="TextBlock_IsTextTrimmedChanged"
                                       MaxLines="2"
                                       Text="{x:Bind HoYoShadePath, Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="Wrap" />
                            <FontIcon Grid.Column="1"
                                      Margin="0,2,2,0"
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE8A7;" />
                        </Grid>
                    </Button>
                    
                    <!--  重置ReShade.ini按钮  -->
                    <Button Height="40"
                            Margin="0,8,0,0"
                            Padding="16,0,16,0"
                            BorderThickness="0"
                            Command="{x:Bind ResetHoYoShadeReShadeIniCommand}"
                            CornerRadius="8,20,20,8"
                            Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE777;" />
                            <TextBlock Text="重置ReShade.ini" />
                        </StackPanel>
                    </Button>
                    
                    <!--  HoYoShade卸载按钮  -->
                    <Button Height="40"
                            Margin="0,8,0,0"
                            Padding="16,0,16,0"
                            BorderThickness="0"
                            Command="{x:Bind UninstallHoYoShadeCommand}"
                            CornerRadius="8,20,20,8"
                            Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" />
                            <TextBlock Text="{x:Bind lang:Lang.FileSettingPage_UninstallHoYoShade}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!--  OpenHoYoShade  -->
            <TextBlock Margin="0,16,0,0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Text="OpenHoYoShade" />
            <StackPanel Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="20">
                <TextBlock>
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_InstallStatus}" />
                </TextBlock>
                <TextBlock>
                    <Run Foreground="{x:Bind OpenHoYoShadeInstalled, Converter={StaticResource BoolToColorConverter}, Mode=OneWay}"
                         Text="{x:Bind OpenHoYoShadeInstalled, Converter={StaticResource BoolToCheckMarkConverter}, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>
            
            <!--  OpenHoYoShade详细信息（仅在已安装时显示）  -->
            <Grid Margin="0,4,0,0"
                  Visibility="{x:Bind OpenHoYoShadeInstalled, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="20">
                    <TextBlock>
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_TotalSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_ShaderAndAddonSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_PresetSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_ScreenshotSize}" />
                        <LineBreak />
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_OtherContentSize}" />
                    </TextBlock>
                    <TextBlock>
                        <Run Text="{x:Bind OpenHoYoShadeTotalSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind OpenHoYoShadeShaderSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind OpenHoYoShadePresetSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind OpenHoYoShadeScreenshotSize, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Bind OpenHoYoShadeOtherSize, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
                
                <!--  OpenHoYoShade路径和卸载按钮  -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <!--  OpenHoYoShade路径按钮  -->
                    <Button Height="40"
                            Padding="20,0,20,1"
                            BorderThickness="0"
                            Command="{x:Bind OpenOpenHoYoShadeFolderCommand}"
                            CornerRadius="20">
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       IsTextTrimmedChanged="TextBlock_IsTextTrimmedChanged"
                                       MaxLines="2"
                                       Text="{x:Bind OpenHoYoShadePath, Mode=OneWay}"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="Wrap" />
                            <FontIcon Grid.Column="1"
                                      Margin="0,2,2,0"
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      Glyph="&#xE8A7;" />
                        </Grid>
                    </Button>
                    
                    <!--  重置ReShade.ini按钮  -->
                    <Button Height="40"
                            Margin="0,8,0,0"
                            Padding="16,0,16,0"
                            BorderThickness="0"
                            Command="{x:Bind ResetOpenHoYoShadeReShadeIniCommand}"
                            CornerRadius="8,20,20,8"
                            Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE777;" />
                            <TextBlock Text="重置ReShade.ini" />
                        </StackPanel>
                    </Button>
                    
                    <!--  OpenHoYoShade卸载按钮  -->
                    <Button Height="40"
                            Margin="0,8,0,0"
                            Padding="16,0,16,0"
                            BorderThickness="0"
                            Command="{x:Bind UninstallOpenHoYoShadeCommand}"
                            CornerRadius="8,20,20,8"
                            Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" />
                            <TextBlock Text="{x:Bind lang:Lang.FileSettingPage_UninstallOpenHoYoShade}" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>


			<!--  日志  -->
			<TextBlock Margin="0,20,0,0"
                       FontSize="20"
                       Text="{x:Bind lang:Lang.FileSettingPage_Log}" />
			<!--  打开日志文件夹  -->
			<Button Height="40"
                    Margin="0,8,0,0"
                    Padding="16,0,16,0"
                    BorderThickness="0"
                    Command="{x:Bind OpenLogFolderCommand}"
                    CornerRadius="8,20,20,8"
                    Style="{ThemeResource AccentButtonStyle}">
				<StackPanel Orientation="Horizontal" Spacing="8">
					<FontIcon Glyph="&#xE838;" />
					<TextBlock Text="{x:Bind lang:Lang.SettingPage_OpenLogFolder}" />
				</StackPanel>
			</Button>
			<!--  缓存  -->
            <TextBlock Margin="0,20,0,0"
                       FontSize="20"
                       Text="{x:Bind lang:Lang.FileSettingPage_Cache}" />
            <StackPanel Margin="0,8,0,0"
                        Orientation="Horizontal"
                        Spacing="20">
                <TextBlock>
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_Log}" />
                    <LineBreak />
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_Image}" />
                    <LineBreak />
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_Browser}" />
                    <LineBreak />
                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.FileSettingPage_GameResource}" />
                </TextBlock>
                <TextBlock>
                    <Run Text="{x:Bind LogCacheSize}" />
                    <LineBreak />
                    <Run Text="{x:Bind ImageCacheSize}" />
                    <LineBreak />
                    <Run Text="{x:Bind WebCacheSize}" />
                    <LineBreak />
                    <Run Text="{x:Bind GameCacheSize}" />
                </TextBlock>
            </StackPanel>
            <!--  清理缓存  -->
            <StackPanel Margin="0,12,0,0"
                        Orientation="Horizontal"
                        Spacing="16">
                <Button Height="40"
                        Padding="16,0,16,0"
                        BorderThickness="0"
                        Command="{x:Bind ClearCacheCommand}"
                        CornerRadius="8,20,20,8"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xEA99;" />
                        <TextBlock Text="{x:Bind lang:Lang.FileSettingPage_ClearCache}" />
                    </StackPanel>
                </Button>
                <ProgressRing Width="28"
                              Height="28"
                              VerticalAlignment="Center"
                              IsIndeterminate="{x:Bind ClearCacheCommand.IsRunning}"
                              Visibility="{x:Bind ClearCacheCommand.IsRunning}" />
            </StackPanel>



        </StackPanel>
    </ScrollViewer>

</sf:PageBase>
