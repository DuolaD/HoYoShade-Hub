<?xml version="1.0" encoding="utf-8" ?>
<sf:WindowEx x:Class="HoYoShadeHub.Features.Toolbox.BlenderRepairToolWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:HoYoShadeHub.Features.Toolbox"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="using:HoYoShadeHub.Frameworks"
             mc:Ignorable="d">

    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Title Bar  -->
        <Grid x:Name="CustomTitleBar"
              Grid.Row="0"
              Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Width="16"
                   Height="16"
                   Margin="16,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Source="ms-appx:///Assets/logo.ico" />

            <TextBlock Grid.Column="1"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Text="Blender Repair Tool" />
        </Grid>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <StackPanel Spacing="24">
                
                <!--  Page Title  -->
                <StackPanel Spacing="8">
                    <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                               Text="Blender Repair Tool" />
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="Fix Blender renderer and screenshot tool issues"
                               TextWrapping="Wrap" />
                </StackPanel>

                <!--  Time Sync Tool  -->
                <StackPanel Spacing="16">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="Time Synchronization Tool" />
                    
                    <InfoBar x:Name="InfoBar_TimeSync"
                             IsClosable="True"
                             IsOpen="False"
                             Severity="Informational" />

                    <StackPanel Spacing="12">
                        <!--  Accurate Time Display (from Cloudflare API)  -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="16,12">
                            <StackPanel Spacing="4">
                                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Text="Accurate Network Time" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock x:Name="TextBlock_AccurateTime"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Text="Loading..." />
                                    <Button x:Name="Button_RefreshAccurateTime"
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            Click="Button_RefreshAccurateTime_Click"
                                            ToolTipService.ToolTip="Refresh">
                                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  Current Local Time Display  -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="16,12">
                            <StackPanel Spacing="4">
                                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Text="Current Local Time" />
                                <TextBlock x:Name="TextBlock_LocalTime"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Text="--:--:--" />
                            </StackPanel>
                        </Border>

                        <!--  Time Sync Method Selection  -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Sync Method" />
                            <RadioButtons x:Name="RadioButtons_SyncMethod"
                                          MaxColumns="2"
                                          SelectedIndex="0"
                                          SelectionChanged="RadioButtons_SyncMethod_SelectionChanged">
                                <RadioButton Content="NTP Server" Tag="NTP" />
                                <RadioButton Content="HTTP (Cloudflare)" Tag="HTTP" />
                            </RadioButtons>
                        </StackPanel>

                        <!--  NTP Server Selection (visible when NTP is selected - default)  -->
                        <StackPanel x:Name="StackPanel_NtpOptions"
                                    Spacing="8"
                                    Visibility="Visible">
                            <TextBlock Text="NTP Server" />
                            <ComboBox x:Name="ComboBox_NtpServer"
                                      HorizontalAlignment="Stretch"
                                      PlaceholderText="Select NTP Server" />
                        </StackPanel>

                        <!--  HTTP Endpoint Selection (visible when HTTP is selected)  -->
                        <StackPanel x:Name="StackPanel_HttpOptions"
                                    Spacing="8"
                                    Visibility="Collapsed">
                            <TextBlock Text="Cloudflare Trace Endpoint" />
                            <ComboBox x:Name="ComboBox_HttpEndpoint"
                                      HorizontalAlignment="Stretch"
                                      PlaceholderText="Select Trace Endpoint" />
                        </StackPanel>

                        <!--  Sync Button  -->
                        <Button x:Name="Button_SyncTime"
                                HorizontalAlignment="Stretch"
                                Click="Button_SyncTime_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE895;" />
                                <TextBlock Text="Sync Time Now" />
                            </StackPanel>
                        </Button>

                        <!--  Auto Sync Options  -->
                        <StackPanel Spacing="8">
                            <CheckBox x:Name="CheckBox_AutoSync"
                                      Content="Enable Auto Sync"
                                      Checked="CheckBox_AutoSync_CheckedChanged"
                                      Unchecked="CheckBox_AutoSync_CheckedChanged" />
                            
                            <StackPanel Orientation="Horizontal"
                                        Spacing="8"
                                        Visibility="{x:Bind CheckBox_AutoSync.IsChecked, Mode=OneWay}">
                                <TextBlock VerticalAlignment="Center" Text="Sync Interval (minutes):" />
                                <NumberBox x:Name="NumberBox_SyncInterval"
                                           Width="120"
                                           Maximum="1440"
                                           Minimum="1"
                                           SpinButtonPlacementMode="Inline"
                                           Value="60"
                                           ValueChanged="NumberBox_SyncInterval_ValueChanged" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!--  Blender Plugin Repair Tools  -->
                <StackPanel Spacing="16">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="Blender Plugin Repair Tools" />

                    <InfoBar x:Name="InfoBar_PluginRepair"
                             IsClosable="True"
                             IsOpen="False"
                             Severity="Informational" />

                    <StackPanel Spacing="12">
                        <Button x:Name="Button_ResetClientTarget"
                                HorizontalAlignment="Stretch"
                                Click="Button_ResetClientTarget_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE8BA;" />
                                <TextBlock Text="Reset Plugin Client Target (Delete config file)" />
                            </StackPanel>
                        </Button>

                        <Button x:Name="Button_FixLoginError"
                                HorizontalAlignment="Stretch"
                                Click="Button_FixLoginError_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE8D7;" />
                                <TextBlock Text="Fix 'Account Not Logged In' Error (Delete cookie file)" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!--  Future Tools Placeholder  -->
                <StackPanel Spacing="16">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                               Text="Other Tools (Coming Soon)" />

                    <InfoBar Title="More Features"
                             IsClosable="False"
                             IsOpen="True"
                             Message="Additional diagnostic and repair tools will be added in future versions."
                             Severity="Informational" />

                    <StackPanel Spacing="12">
                        <Button x:Name="Button_Placeholder"
                                HorizontalAlignment="Stretch"
                                Click="Button_Placeholder_Click"
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE90F;" />
                                <TextBlock Text="Diagnose Issues" />
                            </StackPanel>
                        </Button>

                        <Button x:Name="Button_Placeholder2"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE72C;" />
                                <TextBlock Text="Fix Configuration" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</sf:WindowEx>
